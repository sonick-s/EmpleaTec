<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mostrarEducacionPerfil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Education Title -->
            <TextView
                android:id="@+id/education_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Educación"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor"
                android:layout_marginBottom="16dp"/>

            <!-- Education Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Institution -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/icon_institution"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ecuador"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/education_institution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Institución Educativa: Universidad Ejemplo"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"/>
                    </LinearLayout>

                    <!-- Degree -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/icon_degree"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icotrabajo"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/education_degree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Título: Licenciatura en Ejemplo"
                            android:textSize="16sp"
                            android:textColor="@color/primaryTextColor"/>
                    </LinearLayout>

                    <!-- Duration -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/icon_duration"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/calendario"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/education_years"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Años: 2015 - 2019"
                            android:textSize="16sp"
                            android:textColor="@color/primaryTextColor"/>
                    </LinearLayout>

                    <!-- Category -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:id="@+id/icon_category"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/lapiz"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/Categoria_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Categoría"
                            android:textSize="16sp"
                            android:textColor="@color/primaryTextColor"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
