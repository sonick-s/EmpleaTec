<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mostrarProyectosPerfil"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Projects Title -->
            <TextView
                android:id="@+id/projects_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Proyectos"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor"
                android:layout_gravity="center"/>

            <!-- Project 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:background="@color/cardview_shadow_start_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Project Name -->
                    <TextView
                        android:id="@+id/project_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre del Proyecto: Mi Primer App"
                        android:textSize="18sp"
                        android:textColor="@color/primaryTextColor"
                        android:layout_marginBottom="8dp"/>

                    <!-- Project Description -->
                    <TextView
                        android:id="@+id/project_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descripción del Proyecto: Una aplicación para gestionar tareas diarias."
                        android:textSize="16sp"
                        android:textColor="@color/secondaryTextColor"
                        android:layout_marginBottom="8dp"/>

                    <!-- Project URL -->
                    <TextView
                        android:id="@+id/project_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="URL del Proyecto: www.miapp.com"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp"/>

                    <!-- Project Category -->
                    <TextView
                        android:id="@+id/project_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Categoría del Proyecto: Desarrollo de Software"
                        android:textSize="16sp"
                        android:textColor="@color/secondaryTextColor"
                        android:layout_marginBottom="8dp"/>

                    <!-- Project Image -->
                    <ImageView
                        android:id="@+id/project_image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:layout_marginBottom="8dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Add more projects as needed -->

        </LinearLayout>
    </ScrollView>
</FrameLayout>
