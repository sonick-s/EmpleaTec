<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mostrarExperienciaLaboralPerfil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Work Experience Title -->
            <TextView
                android:id="@+id/work_experience_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experiencia Laboral"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:textColor="@color/primaryTextColor"/>

            <!-- Work Experience Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Company -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:id="@+id/icon_company"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/empresa"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/work_experience_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre de la Empresa"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"/>
                    </LinearLayout>

                    <!-- Role -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:id="@+id/icon_role"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icotrabajo"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/work_experience_role"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre del Cargo"
                            android:textSize="16sp"
                            android:textColor="@color/primaryTextColor"/>
                    </LinearLayout>

                    <!-- Duration -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:id="@+id/icon_duration"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/calendario"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/work_experience_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2020 - Presente"
                            android:textSize="16sp"
                            android:textColor="@color/primaryTextColor"/>
                    </LinearLayout>

                    <!-- Job Description -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:id="@+id/icon_description"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/lapiz"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/work_experience_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DescripciÃ³n detallada del trabajo realizado."
                            android:textSize="16sp"
                            android:textColor="@color/primaryTextColor"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
