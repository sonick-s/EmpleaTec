<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubirProyectosPerfil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Projects -->
            <TextView
                android:id="@+id/projects_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Proyectos"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/project_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del Proyecto"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/project_description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DescripciÃ³n del Proyecto"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/project_url_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Url del Proyecto"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/Categoria_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Categoria del Proyecto"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Spinner for Categories -->
            <Spinner
                android:id="@+id/project_category_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <!-- Image Upload Section -->

            <ImageView
                android:id="@+id/project_image_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/project_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargar Imagen"
                android:layout_marginTop="8dp" />

            <!-- Save Button -->
            <Button
                android:id="@+id/project_save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
