<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Botón normal -->
    <item android:id="@+id/button_normal">
        <shape android:shape="rectangle">
            <solid android:color="#2A322E" /> <!-- Dark Green -->
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#D8CBBB" /> <!-- Toasted -->
            <padding android:left="16dp" android:top="8dp" android:right="16dp" android:bottom="8dp" />
        </shape>
    </item>

    <!-- Botón presionado -->
    <item android:id="@+id/button_pressed">
        <shape android:shape="rectangle">
            <solid android:color="#212427" /> <!-- Blue-Gray -->
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#8D8071" /> <!-- Brown -->
            <padding android:left="16dp" android:top="8dp" android:right="16dp" android:bottom="8dp" />
        </shape>
    </item>

    <!-- Botón deshabilitado -->
    <item android:id="@+id/button_disabled">
        <shape android:shape="rectangle">
            <solid android:color="#2A322E" /> <!-- Dark Green -->
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#757575" /> <!-- Gray for disabled state -->
            <padding android:left="16dp" android:top="8dp" android:right="16dp" android:bottom="8dp" />
        </shape>
    </item>

    <!-- Fondo de EditText -->
    <item android:id="@+id/edittext_background">
        <shape android:shape="rectangle">
            <solid android:color="#2A322E" /> <!-- Dark Green -->
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#D8CBBB" /> <!-- Toasted -->
            <padding android:left="16dp" android:top="8dp" android:right="16dp" android:bottom="8dp" />
        </shape>
    </item>

</selector>
